<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fingerprint_login">

    <ImageView
        android:id="@+id/fingerprint_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/fingerprintImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fingerprint" />

    <TextView
        android:id="@+id/fingerprint_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="@string/fingerprintQuestion1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fingerprint_q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:text="@string/fingerprintQuestion2"
        android:textSize="19sp" />


    <Button
        android:id="@+id/Button_fingerprint_Y"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="500dp"
        android:onClick="onClickSwitchToProfile"
        android:text="@string/fingerprintButtonYes" />

    <Button
        android:id="@+id/Button_Fingerprint_N"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="500dp"
        android:onClick="onClickSwitchToProfile"
        android:text="@string/fingerprintButtonSkip" />


</RelativeLayout>